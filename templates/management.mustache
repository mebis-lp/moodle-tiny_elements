<div class="container-fluid">
    <div class="row row-cols-1 mb-2">
        <div class="col">
            <a href="{{exportlink}}" class="btn btn-primary"> {{#str}} export, tiny_elements {{/str}}</a>
            <a href="#" id="elements_import" class="ml-2 btn btn-primary"> {{#str}} import, tiny_elements {{/str}}</a>            
        </div>
    </div>

    <h2>{{#str}} compcat, tiny_elements {{/str}}</h2>
    <div class="row row-cols-8">
        {{#compcats}}
            <div 
                class="col mb-4 item compcat {{^id}}addcontainer{{/id}}" data-compcat="{{name}}" data-id="{{id}}"
                data-categoryname="{{categoryname}}"
            >
                <div class="card h-100">
                    <div class="card-body">
                        {{#id}}
                            <h5 class="card-title">{{displayname}}</h5>
                            <div class="mt-auto">
                                <a class="export" href="{{exportlink}}/{{id}}">
                                    {{#pix}} t/download, core, {{#str}} export, tiny_elements {{/str}}{{/pix}}</a>
                                <a class="duplicate" href="#" data-id="{{id}}" data-table="compcat">
                                    {{#pix}} t/copy, core, {{#str}} duplicate {{/str}}{{/pix}}</a>
                                <a class="edit" href="#" data-id="{{id}}" data-table="compcat">
                                    {{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}</a>
                                <a class="delete" href="#" data-id="{{id}}" data-title="{{displayname}}" data-table="compcat">
                                    {{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}
                                </a>
                            </div>
                        {{/id}}
                        {{^id}}
                                <a class="add" href="#" data-id="0" data-table="compcat">
                                    <h5 class="card-title">{{#str}} additem, tiny_elements {{/str}}</h5>
                                    {{#pix}} t/add, core, {{#str}} add {{/str}}{{/pix}}</a>
                                </a>
                        {{/id}}
                    </div>
                </div>
            </div>
        {{/compcats}}
    </div>

    <h2>{{#str}} flavors, tiny_elements {{/str}}</h2>
    <div class="row row-cols-12">
        {{#flavor}}
            <div class="col mb-4 item flavor {{#id}}hidden{{/id}}{{^id}}addcontainer{{/id}}" data-categoryname="{{categoryname}}">
                <div class="card h-100">
                <div class="card-body">
                    {{#id}}
                        <div class="clickingextended">
                            <div class="management preview">
                                <img src="{{example}}" alt="{{displayname}}">
                            </div>
                            <h5 class="card-title">{{displayname}}</h5>
                        </div>
                        <div class="mt-auto">
                            <a class="duplicate" href="#" data-id="{{id}}" data-table="flavor">
                                {{#pix}} t/copy, core, {{#str}} duplicate {{/str}}{{/pix}}</a>
                            <a class="edit" href="#" data-id="{{id}}" data-table="flavor">
                                {{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}</a>
                            <a class="delete" href="#" data-id="{{id}}" data-title="{{displayname}}" data-table="flavor">
                                {{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}
                            </a>
                            <a class="buttonicons" href="#" data-flavor="{{name}}">
                                {{#pix}} i/mahara_host, core, {{#str}} compflavor_icons, tiny_elements {{/str}}{{/pix}}
                            </a>
                        </div>
                    {{/id}}
                    {{^id}}
                        <a class="add" href="#" data-id="0" data-table="flavor">
                            <h5 class="card-title">{{#str}} additem, tiny_elements {{/str}}</h5>
                            {{#pix}} t/add, core, {{#str}} add {{/str}}{{/pix}}</a>
                        </a>
                    {{/id}}
                </div>
                </div>
            </div>
        {{/flavor}}
    </div>

    <div class="row{{^showbulkedit}} hidden{{/showbulkedit}}">
        <div class="col mb-4"> 
            <button id="elements_displaynames_flavor_button" class="btn btn-secondary">{{#str}} bulk_edit_flavor_displaynames, tiny_elements {{/str}}</button>
        </div>
    </div>
    
    <h2>{{#str}} components, tiny_elements {{/str}} </h2>

    <div class="row row-cols-12">
        {{#component}}
            <div class="col mb-4 item component {{#id}}hidden{{/id}}{{^id}}addcontainer{{/id}}" data-flavors="{{#flavorsarr}}{{.}} {{/flavorsarr}}" data-categoryname="{{categoryname}}">
                <div class="card h-100">
                <div class="card-body">
                    {{#id}}
                        <div class="clickingextended">
                            <div class="management preview">
                                {{#flavorexamplesarr}}
                                    <img src="{{.}}" alt="{{displayname}}">
                                {{/flavorexamplesarr}}
                            </div>
                            <h5 class="card-title">{{displayname}}</h5>
                        </div>
                        <div class="d-flex mt-auto">
                            <a class="duplicate" href="#" data-id="{{id}}" data-table="component">
                                {{#pix}} t/copy, core, {{#str}} duplicate {{/str}}{{/pix}}</a>
                            <a class="edit" href="#" data-id="{{id}}" data-table="component">
                                {{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}
                            </a>
                            <a class="delete" href="#" data-id="{{id}}" data-title="{{displayname}}" data-table="component">
                                {{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}
                            </a>
                            <a class="preview" id="comp_{{name}}" href="#" data-component="{{name}}" data-flavors="{{#flavorsarr}}{{.}} {{/flavorsarr}}">
                                {{#pix}} t/preview, core, {{#str}} previewcss, tiny_elements {{/str}}{{/pix}}
                            </a>
                            <a class="buttonicons" href="#" data-component="{{name}}">
                                {{#pix}} i/mahara_host, core, {{#str}} compflavor_icons, tiny_elements {{/str}}{{/pix}}
                            </a>
                        </div>
                    {{/id}}
                    {{^id}}
                        <a class="add" href="#" data-id=0 data-table="component">
                            <h5 class="card-title">{{#str}} additem, tiny_elements {{/str}}</h5>
                            {{#pix}} t/add, core, {{#str}} add {{/str}}{{/pix}}</a>
                        </a>
                    {{/id}}
                </div>
                </div>
            </div>
        {{/component}}
    </div>

    <div class="row{{^showbulkedit}} hidden{{/showbulkedit}}">
        <div class="col mb-4"> 
            <button id="elements_displaynames_button" class="btn btn-secondary">{{#str}} bulk_edit_displaynames, tiny_elements {{/str}}</button>
        </div>
    </div>

    <h2>{{#str}} variants, tiny_elements {{/str}}</h2>
    <div class="row row-cols-12">
        {{#variant}}
            <div 
                class="col mb-4 item variant {{name}} {{#id}}hidden{{/id}}{{^id}}addcontainer{{/id}}" data-categoryname="{{categoryname}}">
                <div class="card h-100">
                <div class="card-body">
                    {{#id}}
                        <div class="clickingextended">
                            <h5 class="card-title">{{displayname}}</h5>
                        </div>
                        <div class="mt-auto">
                            <a class="duplicate" href="#" data-id="{{id}}" data-table="variant">
                                {{#pix}} t/copy, core, {{#str}} duplicate {{/str}}{{/pix}}</a>
                            <a class="edit" href="#" data-id="{{id}}" data-table="variant">
                                {{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}</a>
                            <a class="delete" href="#" data-id="{{id}}" data-title="{{displayname}}" data-table="variant">
                                {{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}
                            </a>
                        </div>
                    {{/id}}
                    {{^id}}
                        <a class="add" href="#" data-id=0 data-table="variant">
                            <h5 class="card-title">{{#str}} additem, tiny_elements {{/str}}</h5>
                            {{#pix}} t/add, core, {{#str}} add {{/str}}{{/pix}}</a>
                        </a>
                    {{/id}}
                </div>
                </div>
            </div>
        {{/variant}}
    </div>

    <div class="row{{^showbulkedit}} hidden{{/showbulkedit}}">
        <div class="col mb-4"> 
            <button id="elements_displaynames_variant_button" class="btn btn-secondary">{{#str}} bulk_edit_variant_displaynames, tiny_elements {{/str}}</button>
        </div>
    </div>
</div>